<div class="@Color rounded-lg shadow-lg p-6 transition-all duration-300 hover:shadow-xl hover:scale-105 group">
    <div class="flex justify-between text-text-primary-dark items-center">
        <div>
            <h3 class="text-xl font-semibold mb-2">@Title</h3>
            <p class="text-3xl font-bold">@Value</p>
        </div>
        <i class="@Icon text-4xl opacity-50 transition-transform duration-300 group-hover:rotate-12 group-hover:scale-110 group-hover:opacity-100"></i>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Color { get; set; } = "";
}
