<li class="flex justify-between items-center hover:bg-background-primary-light dark:hover:bg-background-primary-dark transition-all duration-300 p-2 rounded hover:scale-105">
    <div class="flex items-center">
        <i class="@Icon mr-3"></i>
        <span class="text-sm md:text-base">@Text</span>
    </div>
    <span class="text-xs md:text-sm text-gray-400 ml-4">@Time</span>
</li>

@code {
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public string Time { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
}
